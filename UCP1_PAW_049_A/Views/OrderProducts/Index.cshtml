@model IEnumerable<UCP1_PAW_049_A.Models.OrderProduct>

@{
    ViewData["Title"] = "Index";
}

<h1>Pesan Barang</h1>

<p>
    <a asp-action="Create">Tambah Data Baru</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Kuantitas")
            </th>
            <th>
                @Html.DisplayName("Harga Satuan")
            </th>
            <th>
                @Html.DisplayName("ID Jalur Produksi")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Qty)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PriceEach)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdProductNavigation.IdProduct)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdOrderProduct"><i class="fa fa-marker fa-md"></i></a> |
                    <a asp-action="Details" asp-route-id="@item.IdOrderProduct"><i class="fa fa-list"></i></a> |
                    <a asp-action="Delete" asp-route-id="@item.IdOrderProduct"><i class="fa fa-trash-alt fa-md"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
