<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UCP1_PAW_049_A</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" crossorigin="anonymous" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">UCP1_PAW_049_A</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse btn-group" role="group">
                    <ul class="nav navbar-nav">
                        <li><a style="color: lightgrey; " asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" style="color:white; margin-left:15px;" type="button" data-toggle="dropdown">Pemesanan<b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Customers" asp-action="Index">Pelanggan</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Cashiers" asp-action="Index">Kasir</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="DeliveryTeams" asp-action="Index">Tim Pengirim</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="OrderProducts" asp-action="Index">Pesan Produk</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Orders" asp-action="Index">Pesan</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Products" asp-action="Index">Produk</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Status" asp-action="Index">Status</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - UCP1_PAW_049_A - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
