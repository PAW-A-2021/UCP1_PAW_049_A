@model IEnumerable<UCP1_PAW_049_A.Models.Customer>

@{
    ViewData["Title"] = "Index";
}

<h1>Data Pelanggan</h1>

<p>
    <a asp-action="Create">Tambah Data Baru</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Nama Pelanggan")
            </th>
            <th>
                @Html.DisplayName("Alamat")
            </th>
            <th>
                @Html.DisplayName("Batas Kredit")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NamaCustomer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreditLimit)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdCustomer"><i class="fa fa-marker fa-md"></i></a> |
                    <a asp-action="Details" asp-route-id="@item.IdCustomer"><i class="fa fa-list"></i></a> |
                    <a asp-action="Delete" asp-route-id="@item.IdCustomer"><i class="fa fa-trash-alt fa-md"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
